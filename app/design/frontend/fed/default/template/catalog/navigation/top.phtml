 */
?>

<nav class="navbar navbar-default">
    <div class="container-fluid">
        <?php $_menu = $this->renderCategoriesMenuHtml(0,'level-top') ?>
        <?php if($_menu): ?>
            <div class="collapse navbar-collapse" id="navbar-collapse-1">
                <div class="menu-bar">
                    <ul id="nav" class="nav navbar-nav">
                        <li><a href="sales"><?php echo $this->__('Акции'); ?></a></li>
                        <?php echo $_menu ?>
                        <?php echo $this->getLayout()->createBlock('cms/block')->setBlockId('additional_menu_links')->toHtml(); ?>
                    </ul>
                    <div class="nav-bottom visible-xs">
                        <?php echo $this->getChildHtml('topLinkMob')?>
                        <div class="row">
                            <?php echo $this->getLayout()->createBlock('cms/block')->setBlockId('footer_links')->toHtml() ?>
                        </div>
                    </div>
                </div>
                <div class="fixed-bar visible-xs">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-1" aria-expanded="false">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
            </div>
        <?php endif ?>
    </div>
</nav>
